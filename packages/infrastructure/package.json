{
  "name": "@solanalysis/infrastructure",
  "version": "1.0.0",
  "description": "Infrastructure as Code for Solanalysis using AWS CDK",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy",
    "deploy:lightsail": "cdk deploy",
    "destroy": "cdk destroy",
    "destroy:lightsail": "cdk destroy",
    "synth": "cdk synth",
    "synth:lightsail": "cdk synth",
    "diff": "npm run build && cdk diff",
    "bootstrap": "cdk bootstrap",
    "bootstrap:singapore": "cdk bootstrap aws://$(aws sts get-caller-identity --query Account --output text)/ap-southeast-1",
    "clean": "rimraf dist cdk.out",
    "list": "cdk list",
    "outputs": "aws cloudformation describe-stacks --region ap-southeast-1 --query \"Stacks[?contains(StackName,'Solanalysis')].{StackName:StackName,Status:StackStatus,Outputs:Outputs[].{Key:OutputKey,Value:OutputValue}}\" --output table"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.150.0",
    "constructs": "^10.3.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "aws-cdk": "^2.150.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3"
  }
}
